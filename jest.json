{
  "preset": "ts-jest",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "packages/**/src/**/*.ts",
    "!**/examples/**",
    "!packages/cli/**",
    "!**/types/**",
    "!**/dist/**",
    "!**/.yalc/**",
    "!**/node_modules/**",
    "!**/packages/**/index.ts"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "json"
  ],
  "coverageDirectory": "./coverage",
  "transform": {
    "^.+\\.m?tsx?$": ["ts-jest", {
      "tsconfig": "./packages/tsconfig-base.json"
    }]
  },
  "transformIgnorePatterns": [
    "node_modules/(?!(?:.pnpm/)?(nist-weierstrauss|multiformatsgggggg))"
  ],
  "testMatch": [
    "**/__tests__/**/*.test.*",
    "!**/.yalc/**"
  ],
  "testEnvironment": "node",
  "automock": false,
  "verbose": true
}
