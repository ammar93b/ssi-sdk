{
  "preset": "ts-jest",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx"
  ],
  "collectCoverage": true,
  "collectCoverageFrom": [
    "packages/**/src/**/*.ts",
    "!**/examples/**",
    "!packages/cli/**",
    "!**/types/**",
    "!**/dist/**",
    "!**/node_modules/**/__tests__/**",
    "!**/node_modules/**/*.test.ts",
    "!**/node_modules/**",
    "!**/packages/**/index.ts"
  ],
  "coverageReporters": [
    "text",
    "lcov",
    "json"
  ],
  "coverageProvider": "v8",
  "coverageDirectory": "./coverage",
  "extensionsToTreatAsEsm": [".ts", ".tsx"],
  "transform": {
    "^.+\\.m?tsx?$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": "./packages/tsconfig-base.json"
      }
    ]
  },
  "testMatch": [
    "**/__tests__/**/*.test.*"
  ],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "testEnvironment": "node",
  "automock": false,
  "verbose": true
}
