{
  "name": "SSI-SDK-workspace",
  "private": true,
  "version": "0.8.1",
  "description": "Sphereon SSI Typescript SDK (Workspace)",
  "repository": "git@github.com:Sphereon-Opensource/SSI-SDK.git",
  "author": "Sphereon <dev@sphereon.com>",
  "license": "Apache-2.0",
  "scripts": {
    "build": "lerna run build && pnpm build:copyfiles && pnpm build:schema-api",
    "build:schema-api": "lerna run extract-api && lerna run generate-plugin-schema",
    "build:copyfiles": "lerna run build:copyfiles",
    "test:ci": "pnpm test -- --coverage=true",
    "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --experimental-json-modules\" jest --verbose --config=jest.json",
    "test:watch": "pnpm test --watch --verbose",
    "test:lint": "eslint . --ext .ts",
    "prettier": "prettier --write \"{packages,__tests__,!dist}/**/*.{ts,tsx,js,json,md,yml}\"",
    "build-clean": "rimraf ./packages/*/dist ./packages/*/api ./packages/*/node_modules ./packages/*/tsconfig.tsbuildinfo && jest --clearCache",
    "publish:latest": "lerna publish --conventional-commits --include-merged-tags --create-release github --yes --dist-tag latest --registry https://registry.npmjs.org",
    "publish:next": "lerna publish --conventional-prerelease --force-publish --canary --no-git-tag-version --include-merged-tags --preid next --pre-dist-tag next --yes --registry https://registry.npmjs.org",
    "publish:unstable": "lerna publish --conventional-prerelease --force-publish --canary --no-git-tag-version --include-merged-tags --preid unstable --pre-dist-tag unstable --yes --registry https://registry.npmjs.org",
    "postinstall": "patch-package"
  },
  "workspaces": {
    "nohoist": [
      "**disabled-replace-by-package-names**"
    ],
    "packages": [
      "./packages/*"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "master",
      {
        "name": "beta",
        "prerelease": true
      }
    ]
  },
  "pnpm": {
    "overrides": {
      "@veramo/core": "^5.1.2",
      "@veramo/credential-w3c": "^5.1.2",
      "@veramo/data-store": "^5.1.2",
      "@veramo/did-jwt": "^5.1.2",
      "@veramo/credential-ld": "^5.1.2",
      "@veramo/utils": "^5.1.2",
      "@veramo/did-manager": "^5.1.2",
      "@veramo/kms-local": "^5.1.2",
      "typescript": "4.9.5"
    }
  },
  "devDependencies": {
    "@digitalcredentials/jsonld": "^5.2.1",
    "@jest/globals": "^29.4.3",
    "@microsoft/api-documenter": "^7.21.5",
    "@microsoft/api-extractor": "^7.34.4",
    "@microsoft/api-extractor-model": "^7.26.4",
    "@types/debug": "4.1.7",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.13.0",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@veramo/remote-client": "^5.1.2",
    "@veramo/remote-server": "^5.1.2",
    "codecov": "^3.8.3",
    "cross-fetch": "^3.1.5",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^29.4.3",
    "jest-fetch-mock": "^3.0.3",
    "json-schema": "^0.4.0",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.2.0",
    "oas-resolver": "^2.5.6",
    "openapi-types": "^10.0.0",
    "patch-package": "^6.5.1",
    "prettier": "^2.8.4",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.5",
    "ts-jest": "^29.0.5",
    "ts-json-schema-generator": "^0.97.0",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "prettier": {
    "endOfLine": "auto",
    "semi": false,
    "singleQuote": true,
    "printWidth": 150
  }
}
